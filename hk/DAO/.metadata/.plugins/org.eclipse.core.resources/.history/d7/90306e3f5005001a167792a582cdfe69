package persistence.dao.impl;

import java.sql.ResultSet;
import java.util.List;
import persistence.dao.InfoDAO;
import service.dto.InfoDTO;

public class InfoDAOImpl implements InfoDAO{
private JDBCUtil jdbcUtil = null;
	
	private static String query = "SELECT DEPARTMENT.D_CODE AS Info_CODE, " +
								  "       DEPARTMENT.FACULTY AS Info_FAC, " +
								  "       DEPARTMENT.COLLEGE AS Info_COL, " +
								  "       DEPARTMENT.D_NAME AS Info_NAME " +
								  "FROM DEPARTMENT ";
		
	public InfoDAOImpl() {
		jdbcUtil = new JDBCUtil();
	}	
	
	@Override
	public InfoDTO getInfoByName(String dName) {
		String searchQuery = query + "WHERE DEPARTMENT.D_NAME = ?";
		Object[] param = new Object[] {dName};

		jdbcUtil.setSql(searchQuery);
		jdbcUtil.setParameters(param);
	
		try {
			ResultSet rs = jdbcUtil.executeQuery();
			InfoDTO dto = new InfoDTO();
			while (rs.next()) {
				dto.setDCode(rs.getString("Info_CODE"));
				dto.setFaculty(rs.getString("Info_FAC"));
				dto.setCollege(rs.getString("Info_COL"));
				dto.setDName(rs.getString("Info_NAME"));
			}
			return dto;
		} catch (Exception ex) {
			ex.printIegerStackTrace();
		} finally {
			jdbcUtil.close();
		}
		return null;
	}

	@Override
	public List<InfoDTO> getInfoList() {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public Integer insertInfo(InfoDTO Info) {
		// TODO Auto-generated method stub
		return 0;
	}

	@Override
	public Integer updateInfo(InfoDTO Info) {
		// TODO Auto-generated method stub
		return 0;
	}

	@Override
	public Integer deleteInfo(Integer dCode) {
		// TODO Auto-generated method stub
		return 0;
	}

	@Override
	public InfoDTO getInfoByCode(String dCode) {
		// TODO Auto-generated method stub
		return null;
	}	
}

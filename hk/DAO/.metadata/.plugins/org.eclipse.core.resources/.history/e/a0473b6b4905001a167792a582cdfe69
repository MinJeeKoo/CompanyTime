package persistence;

import persistence.dao.impl.InfoDAO;
import persistence.dao.impl.InfoDAOImpl;
import persistence.dao.impl.StatisticDAO;
import persistence.dao.impl.StatisticDAOImpl;
import persistence.dao.impl.TrustDAO;
import persistence.dao.impl.TrustDAOImpl;

public class DAOFactory {
	public InfoDAO getInfoDAO() {
		return new InfoDAOImpl();		 
	}
	
	// InfoDAO 를 위한 RDB 용 DAO Implementation 객체를 반환
	public TrustDAO getTrustDAO() {
		return new TrustDAOImpl();		
	}
	
	// ProfDAO 를 위한 RDB 용 DAO Implementation 객체를 반환
	public StatisticDAO getStatisticDAO() {
		return new StatisticDAOImpl();		
	}
}
